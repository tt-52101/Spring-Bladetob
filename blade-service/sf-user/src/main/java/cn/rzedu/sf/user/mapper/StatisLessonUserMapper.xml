<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.rzedu.sf.user.mapper.StatisLessonUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="statisLessonUserResultMap" type="cn.rzedu.sf.user.entity.StatisLessonUser">
        <id column="id" property="id"/>
        <result column="lesson_id" property="lessonId"/>
        <result column="user_id" property="userId"/>
        <result column="create_date" property="createDate"/>
        <result column="modify_date" property="modifyDate"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>


    <select id="selectStatisLessonUserPage" resultMap="statisLessonUserResultMap">
        select * from sf_statis_lesson_user where is_deleted = 0
    </select>

    <select id="findByLessonIdAndUserId" resultMap="statisLessonUserResultMap">
        select * from sf_statis_lesson_user where is_deleted = 0
        AND lesson_id = #{lessonId}
        AND user_id = #{userId}
        LIMIT 1
    </select>

</mapper>
