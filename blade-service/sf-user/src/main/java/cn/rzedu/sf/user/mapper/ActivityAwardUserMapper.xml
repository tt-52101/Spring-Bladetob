<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.rzedu.sf.user.mapper.ActivityAwardUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="activityAwardUserResultMap" type="cn.rzedu.sf.user.entity.ActivityAwardUser">
        <id column="id" property="id"/>
        <result column="type" property="type"/>
        <result column="award_type" property="awardType"/>
        <result column="user_id" property="userId"/>
        <result column="user_uuid" property="userUuid"/>
        <result column="name" property="name"/>
        <result column="mobile" property="mobile"/>
        <result column="location" property="location"/>
        <result column="address" property="address"/>
        <result column="status" property="status"/>
        <result column="click_status" property="clickStatus"/>
        <result column="order_number" property="orderNumber"/>
        <result column="create_date" property="createDate"/>
        <result column="modify_date" property="modifyDate"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>


    <select id="selectActivityAwardUserPage" resultMap="activityAwardUserResultMap">
        select * from sf_activity_award_user where is_deleted = 0
    </select>
    <select id="findByTypeAndUserId" resultMap="activityAwardUserResultMap">
        select * from sf_activity_award_user where is_deleted = 0
        AND `type` = #{type}
        AND user_id = #{userId}
        LIMIT 1
    </select>

</mapper>
