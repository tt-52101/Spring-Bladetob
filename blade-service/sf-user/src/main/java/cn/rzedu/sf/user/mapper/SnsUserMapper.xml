<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.rzedu.sf.user.mapper.SnsUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="snsUserResultMap" type="cn.rzedu.sf.user.entity.SnsUser">
        <id column="id" property="id"/>
        <result column="open_id" property="openId"/>
        <result column="icon" property="icon"/>
        <result column="nickname" property="nickname"/>
        <result column="name" property="name"/>
        <result column="school" property="school"/>
        <result column="birthday" property="birthday"/>
        <result column="mobile" property="mobile"/>
        <result column="category" property="category"/>
        <result column="province" property="province"/>
        <result column="city" property="city"/>
        <result column="district" property="district"/>
        <result column="location" property="location"/>
        <result column="address" property="address"/>
        <result column="create_date" property="createDate"/>
        <result column="modify_date" property="modifyDate"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>

    <resultMap id="snsUserVOResultMap" type="cn.rzedu.sf.user.vo.SnsUserVO" extends="snsUserResultMap">

    </resultMap>

    <select id="selectSnsUserPage" resultMap="snsUserResultMap">
        select * from sns_user where is_deleted = 0
    </select>

    <select id="findByOpenId" resultMap="snsUserVOResultMap">
        SELECT * FROM sns_user WHERE is_deleted = 0 AND open_id = #{openId} LIMIT 1
    </select>

</mapper>
