<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.rzedu.sf.user.mapper.ActivityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="activityResultMap" type="cn.rzedu.sf.user.entity.Activity">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="type" property="type"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="place" property="place"/>
        <result column="comment" property="comment"/>
        <result column="create_date" property="createDate"/>
        <result column="modify_date" property="modifyDate"/>
        <result column="is_deleted" property="isDeleted"/>
    </resultMap>


    <select id="selectActivityPage" resultMap="activityResultMap">
        select * from sf_activity where is_deleted = 0
    </select>

    <select id="findByName" resultType="cn.rzedu.sf.user.entity.Activity">
        select * from sf_activity where is_deleted = 0
        AND `name` = #{name}
        LIMIT 1
    </select>

</mapper>
